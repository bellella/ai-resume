generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String             @id @default(auto()) @map("_id") @db.ObjectId
  email           String             @unique
  password        String
  name            String?
  coinBalance     Int                @default(0)
  defaultResumeJson Json?
  imageUrl        String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  resumes         Resume[]
  transactions    CoinTransaction[]
}

model Resume {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  resumeHtml  String
  resumeJson  Json
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  templateId  String?    @db.ObjectId
  template    Template?  @relation(fields: [templateId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CoinTransaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        TransactionType
  amount      Int
  description String?
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model CoinPackage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  price     Int
  coins     Int
  createdAt DateTime @default(now())
}

model Template {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  html            String         // full HTML with inline <style> if needed
  level           TemplateLevel  // view permission level
  previewImageUrl String?
  createdAt       DateTime       @default(now())

  resumes         Resume[]
}

enum TemplateLevel {
  USER      // only visible to the creator
  ADMIN     // created or managed by admin
  DELETED   // hidden from all UIs
}


enum TransactionType {
  CHARGE
  USAGE
  REFUND
}